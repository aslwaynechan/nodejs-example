{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "types": [
      "reflect-metadata",
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": false,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "webpack.*",
    "src/backend",
    "config"
  ],
  "compileOnSave": false
}

